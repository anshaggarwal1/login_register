  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/add-employee" type="button" class="btn btn-primary align-self-center">+ add user</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col"> Name</th>
      <th scope="col">Department</th>
      <th scope="col">Phone</th>
      <th scope="col" class="action">Action</th>
      <th scope="col" class="text-end">Mark Attendence</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Department}}</td>
      <td>{{this.Phone}}</td>
      <td class="action">
        <a href="/viewuser/{{this.Name}}{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>
          Edit</a>
        <a href="/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
      </td>
      <td class="text-end">
        <form action="/present" method="POST">
        <button name="present" value="{{this.Name}}{{this.id}}" class="btn btn-success">Present</button>
        </form>
        {{!-- <a href="/{{this.Name}}{{this.id}}/present" class=" btn btn-success">Present</a> --}}
        <a href="" class=" btn btn-danger">Absent</a>
      </td>

    </tr>
